# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here

# Hyperliquid Exchange Configuration
HYPERLIQUID_BASE_URL=https://api.hyperliquid.xyz
HYPERLIQUID_TESTNET_URL=https://api.hyperliquid-testnet.xyz

# Trading Settings
DEFAULT_POSITION_SIZE=1.0
DEFAULT_MAX_RISK=2.0
LIVE_TRADING=false
COMMAND_PREFIX=!

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://trader:secure_password_change_me@postgres:5432/trading_bot

# Individual PostgreSQL settings (used by docker-compose)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=trading_bot
POSTGRES_USER=trader
POSTGRES_PASSWORD=secure_password_change_me

# Admin Panel Configuration
ADMIN_SECRET_KEY=please-change-this-to-a-random-secret-key
ADMIN_USERNAME=admin
ADMIN_PASSWORD=please-change-this-password
ADMIN_PORT=8000

# Logging
LOG_LEVEL=INFO

# For Migration Script (optional, if migrating from SQLite)
SQLITE_DB_PATH=data/trading_bot.db
